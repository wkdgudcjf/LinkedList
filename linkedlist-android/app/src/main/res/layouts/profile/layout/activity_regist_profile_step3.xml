<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ep.linkedlist.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 학교 입력 UI 시작 -->
        <com.ep.linkedlist.view.common.LinkedListTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_textView_school"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/profile_textView_school"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:gravity="fill_horizontal"
            android:layout_marginRight="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_editText_school_hint"
            android:textSize="20sp"
            android:id="@+id/profile_editText_school"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />
        <!-- 학교 입력 UI 끝 -->

        <!-- 직업 입력 UI 시작 -->
        <com.ep.linkedlist.view.common.LinkedListTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_textView_job"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/profile_textView_job"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:gravity="fill_horizontal"
            android:layout_marginRight="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_editText_job_hint"
            android:textSize="20sp"
            android:id="@+id/profile_editText_job"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />
        <!-- 직업 입력 UI 끝 -->

        <!-- 직장 입력 UI 시작 -->
        <com.ep.linkedlist.view.common.LinkedListTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_textView_company"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/profile_textView_company"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:gravity="fill_horizontal"
            android:layout_marginRight="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_editText_company_hint"
            android:textSize="20sp"
            android:id="@+id/profile_editText_company"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />
        <!-- 직장 입력 UI 끝 -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_button_company_authorization"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <!-- 4단계로 넘어가기 버튼 -->

</RelativeLayout>