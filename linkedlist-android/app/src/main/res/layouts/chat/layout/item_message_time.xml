<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="23.5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="4.75dp">

    <!-- 가운데 구분선 -->
    <ImageView
        android:paddingRight="11dp"
        android:paddingLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:src="@drawable/gray_line"/>

    <!-- 배경 -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="23.5dp"
        android:layout_centerInParent="true"
        android:src="@drawable/chat_message_time_bg"
        android:scaleType="fitXY"/>

    <!-- 날짜 텍스트 -->
    <com.ep.linkedlist.view.common.LinkedListTextView
        android:id="@+id/chatMessageDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="2017.01.05"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        app:fontWeight="medium"/>

</RelativeLayout>